<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="monash.emission.account.ChartFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barChart"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView29">

    </com.github.mikephil.charting.charts.BarChart>

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_endDate_chart"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/et_startDate_chart"
        android:text="\nStart By"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_endDate_chart"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView28"
        android:layout_toStartOf="@+id/et_startDate_chart"
        android:text="\nEnd By"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_startDate_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/but_run_chart"
        android:width="300px"
        android:ems="10"
        android:inputType="date"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_endDate_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_startDate_chart"
        android:layout_toStartOf="@+id/but_run_chart"
        android:width="300px"
        android:ems="10"
        android:inputType="date"
        android:textAlignment="center" />

    <Button
        android:id="@+id/but_run_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:width="50px"
        android:text="Run"
        android:layout_alignBottom="@+id/et_endDate_chart" />
</RelativeLayout>
