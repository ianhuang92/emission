<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="monash.emission.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Emission Tracker"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="Loading weather information......"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:id="@+id/weatherInfo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />

    <Button
        android:text="Estimate My Emission"
        android:layout_height="70dp"
        android:layout_marginTop="73dp"
        android:id="@+id/estimatebtn"
        android:layout_below="@+id/weatherInfo"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_width="250dp"
        android:textAllCaps="false" />

    <Button
        android:text="Manage My Emission"
        android:layout_marginTop="70dp"
        android:id="@+id/managebtn"
        android:layout_below="@+id/estimatebtn"
        android:layout_alignStart="@+id/estimatebtn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textSize="18sp"
        android:textAllCaps="false" />
</RelativeLayout>
