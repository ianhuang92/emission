<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="monash.emission.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Emission Tracker"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView22" />

    <Button
        android:text="Manage My Emission"
        android:layout_marginTop="20dp"
        android:id="@+id/managebtn"
        android:layout_below="@+id/estimatebtn"
        android:layout_alignStart="@+id/estimatebtn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textSize="18sp"
        android:textAllCaps="false" />

    <TextView
        android:text="Designed for Coffee Roasting Industry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|italic"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:text="Loading weather information......"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="5"
        android:layout_marginTop="33dp"
        android:id="@+id/weatherInfo"
        android:textSize="18sp"
        android:layout_below="@+id/textView23"
        android:layout_alignStart="@+id/estimatebtn"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <Button
        android:text="Estimate My Emission"

        android:layout_height="70dp"
        android:id="@+id/estimatebtn"
        android:layout_marginTop="67dp"
        android:textSize="18sp"
        android:layout_width="250dp"
        android:textAllCaps="false"
        android:layout_below="@+id/weatherInfo"
        android:layout_centerHorizontal="true">
    </Button>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/qmk"
        android:id="@+id/imageView2"
        android:layout_marginEnd="23dp"
        android:layout_below="@+id/weatherInfo"
        android:layout_toStartOf="@+id/zipBTN" />

    <Button
        android:text="Another Post Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zipBTN"
        android:layout_below="@+id/weatherInfo"
        android:layout_alignEnd="@+id/estimatebtn" />

</RelativeLayout>
