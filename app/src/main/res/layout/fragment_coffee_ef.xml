<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="monash.emission.CoffeeRoastingFuncV2.CoffeeEFFragment">


    <TextView
        android:text="Select your operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/textView11"
        android:textSize="24sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"

        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"

        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_alignParentEnd="true">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batch Roaster with Thermal Oxidiser"
            android:checked="true"
            android:id="@+id/ef1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Continuous Cooler with Cyclone"
            android:id="@+id/ef2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Continuous Roaster"
            android:id="@+id/ef3" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Continuous Roaster with Thermal Oxidiser"
            android:id="@+id/ef4" />
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:text="Green Coffee Bean Screening, Handling, and Storage System with Fabric Filter"
                android:id="@+id/ef5" />
    </RadioGroup>

    <TextView
        android:text="Activity rate, tones/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_marginTop="32dp"
        android:id="@+id/textView13"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:text="Overall control efficiency of pollutant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignTop="@+id/efinput"
        android:layout_alignStart="@+id/textView13"
        android:layout_toStartOf="@+id/rateinput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginRight="24dp"
        android:id="@+id/rateinput"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toEndOf="@+id/textView13" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginRight="24dp"
        android:id="@+id/efinput"
        android:textAlignment="center"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/rateinput"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView12"
        android:hint="17%" />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/efinput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/calculateefBTN"
        android:textAllCaps="false" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:srcCompat="@drawable/qmk"
        android:id="@+id/helpRate"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toStartOf="@+id/textView13" />


</RelativeLayout>
