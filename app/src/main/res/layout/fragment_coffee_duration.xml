<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:focusable="true"
    android:focusableInTouchMode="true">
    <TextView
        android:id="@+id/tv_fragment_coffee_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="\nSelect Start and End Date:\n "
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/et_start_fragment_coffee_duration"
        android:layout_width="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_fragment_coffee_duration"
        android:ems="10"
        android:inputType="date"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_end_fragment_coffee_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_start_fragment_coffee_duration"
        android:layout_below="@+id/et_start_fragment_coffee_duration"
        android:ems="10"
        android:layout_marginRight="24dp"
        android:inputType="date"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_end_fragment_coffee_duration"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_fragment_coffee_duration"
        android:layout_toStartOf="@+id/et_start_fragment_coffee_duration"
        android:text="\nStart from:"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView

        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_end_fragment_coffee_duration"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_toStartOf="@+id/et_start_fragment_coffee_duration"
        android:text="\nEnd by:"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:text="\nAverage Daily Machine Running Hour:\n"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et_avg_hr_fragment_coffee_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_duration_mass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_avg_hr_fragment_coffee_duration"
        android:text="\nTones of Green Coffee Beans Processed:\n"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et_mass_fragment_coffee_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_duration_mass"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/but_fragment_coffee_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:backgroundTint="@color/btncolor" />

        <Button
            android:text="Can not proceed?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_below="@+id/but_fragment_coffee_duration"
            android:layout_centerHorizontal="true"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:backgroundTint="@android:color/holo_orange_dark" />
    </RelativeLayout>

</LinearLayout>