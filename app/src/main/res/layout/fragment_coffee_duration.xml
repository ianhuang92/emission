<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_fragment_coffee_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="\nSelect Start and End Date:\n "
        android:textAlignment="center"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/et_start_fragment_coffee_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_fragment_coffee_duration"
        android:ems="10"
        android:inputType="date"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_end_fragment_coffee_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_start_fragment_coffee_duration"
        android:layout_below="@+id/et_start_fragment_coffee_duration"
        android:ems="10"
        android:inputType="date"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_end_fragment_coffee_duration"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_fragment_coffee_duration"
        android:layout_toStartOf="@+id/et_start_fragment_coffee_duration"
        android:text="\nStart from:"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_end_fragment_coffee_duration"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_toStartOf="@+id/et_start_fragment_coffee_duration"
        android:text="\nEnd by:"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:text="\nAverage Daily Machine Running Hour:\n"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_avg_hr_fragment_coffee_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/but_fragment_coffee_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Next" />
    </RelativeLayout>

</LinearLayout>