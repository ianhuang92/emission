<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="monash.emission.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air Quality Information "
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView22" />

    <TextView
        android:text="Based on your current location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|italic"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <Button
        android:text="Another Post Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zipBTN"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:text="Loading air quality information......"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="5"
        android:layout_marginTop="36dp"
        android:id="@+id/weatherInfo"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/qmk"
        android:id="@+id/imageView2"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/weatherInfo"
        android:layout_alignEnd="@+id/zipBTN" />

    <TextView
        android:text="Recommendations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:layout_above="@+id/zipBTN"
        android:layout_alignStart="@+id/zipBTN"
        android:layout_marginBottom="11dp" />

</RelativeLayout>
